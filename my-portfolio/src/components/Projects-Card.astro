---
const { img, title, url } = Astro.props;
---

<div class="w-full p-4 flex justify-center items-center flex-wrap">
    <div class="bg-gray-100 p-6 rounded-lg dark:bg-gray-700">
        <img
            class="h-80 rounded w-full object-cover object-center mb-6"
            src={img}
            alt={title}
        />

        <h2
            class="text-lg text-gray-900 font-medium title-font mb-4 dark:text-white"
        >
            <a href={url}>{title}</a>
        </h2>
        <p class="leading-relaxed text-base"></p>
    </div>
</div>
